<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary_shade</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">#E91E63</item>
    </style>

    <style name="ListItemTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="DetailsTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:shadowColor">@color/half_transparent</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="DialogButtonsStyle">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/bg_dialog_buttons</item>
        <item name="android:minWidth">@dimen/dialog_button_min_width</item>
        <item name="android:padding">@dimen/dialog_element_padding</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
